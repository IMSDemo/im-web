# http://editorconfig.org

root = true

[*] # 表示所有文件适用
charset = utf-8 # 字符集utf-8
indent_style = space # 缩进风格：空格
indent_size = 2 # 缩进大小2
end_of_line = lf # 控制换行类型
trim_trailing_whitespace = true # 去除行首的任意空白字符
insert_final_newline = true # 在文件的最后插入一个新行

[*.md] # md文件适用
max_line_length = off
trim_trailing_whitespace = false